{% extends 'base.html.twig' %}

{% block title %}Resetuj hasło{% endblock %}

{% block body %}
  <div class="container text-center" style="width: 40%;">
    {% for flash_error in app.flashes('reset_password_error') %}
      <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Resetuj hasło</h1>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email, {'label': ' ', 'attr': {'class': 'form-control', 'placeholder': 'Wpisz swój adres email'}}) }}

    <div>
      <small>
        Podaj swój adres email. Wyślemy Ci link do zresetowania hasła.
      </small>
    </div>

    <button class="btn btn-primary">Wyślij maila</button>
    {{ form_end(requestForm) }}
  </div>
{% endblock %}
